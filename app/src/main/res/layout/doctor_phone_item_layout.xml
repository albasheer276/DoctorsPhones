<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/docPhone_txtDoctorName"
                style="@style/CardHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="د. كامل حبيب محمد" />

            <TextView
                android:id="@+id/docPhone_txtDoctorSpecialize"
                style="@style/CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:text="باطنية وأطفال" />

            <TextView
                android:id="@+id/docPhone_txtDoctorAddress"
                style="@style/CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:text="بابل - الحلة - شارع 60 - مجمع حمورابي الطبي" />

            <TextView
                android:id="@+id/docPhone_btnDoctorDetails"
                style="@style/SmallSecondaryButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/phones" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>