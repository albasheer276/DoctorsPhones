<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_width="200dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/md_theme_light_onPrimary"
            android:orientation="vertical">

            <TextView
                android:id="@+id/docPhone_txtDoctorName"
                style="@style/CardHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="د. كامل حبيب محمد" />

            <TextView
                android:id="@+id/docPhone_txtDoctorSpecialize"
                style="@style/CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:text="باطنية وأطفال" />

            <TextView
                android:id="@+id/docPhone_txtDoctorAddress"
                style="@style/CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:text="بابل - الحلة - شارع 60 - مجمع حمورابي الطبي" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <ImageButton
                    android:id="@+id/docPhone_btnDoctorOnMap"
                    style="@android:style/Widget.Material.Light.Button.Borderless.Small"
                    android:layout_width="24dp"
                    android:layout_height="23dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_maker_icon"
                    android:contentDescription="@string/map_marker_button" />

                <TextView
                    android:id="@+id/docPhone_btnDoctorDetails"
                    style="@style/SmallSecondaryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="23dp"
                    android:text="@string/phones"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>