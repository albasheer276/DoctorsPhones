<resources>

    <style name="Theme.DoctorsPhones" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <!-- Defining that new color in ColorPrimaryDark -->
        <item name="colorPrimaryDark">@color/md_theme_light_secondary</item>

        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>

        <item name="fontFamily">@font/cairo_font</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTitle">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="NormalInput" parent="android:Widget.EditText">
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/rounded_bordered_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="ProfileInput" parent="android:Widget.EditText">
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/rounded_profile_input_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="ChatInput" parent="android:Widget.EditText">
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="ShapeAppearanceOverlay.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Button.Rounded</item>
        <item name="backgroundTint">@color/md_theme_light_secondaryContainer</item>
        <item name="colorControlHighlight">@color/md_theme_light_secondary</item>
        <item name="android:textColor">@color/md_theme_light_onSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SuccessButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Button.Rounded</item>
        <item name="backgroundTint">@color/successColor</item>
        <item name="colorControlHighlight">@color/successLightColor</item>
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Button.Rounded</item>
        <item name="backgroundTint">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorControlHighlight">@color/md_theme_light_surfaceVariant</item>
        <item name="android:textColor">@color/md_theme_light_outline</item>
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SmallSecondaryButton" parent="">
        <item name="android:background">@drawable/secondary_rounded_bordered_bg</item>
        <item name="colorControlHighlight">@color/secondaryButtonColorHighlight</item>
        <item name="android:textColor">@color/secondaryButtonTextColor</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="fontFamily">@font/arabic_typesettings_font</item>
    </style>

    <style name="CardHeader">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/arabic_typesettings_font</item>
        <item name="android:background">@color/md_theme_light_primaryContainer</item>
    </style>

    <style name="BottomSheetHeader">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/arabic_typesettings_font</item>
        <item name="android:background">@color/md_theme_light_primaryContainer</item>
    </style>

    <style name="BottomSheetH1">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CardH1">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H1">
        <item name="android:gravity">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="H2">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FooterText">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/md_theme_light_onSecondary</item>
    </style>

    <style name="DrawerLink">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/md_theme_light_error</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardH2">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardH3">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ChatName">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ChatMessageContent">
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="CardSecondary">
        <item name="android:textColor">@color/md_theme_light_outline</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TimeText">
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FormAlertLabel">
        <item name="android:textColor">@color/dangerDarkColor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CardNumber">
        <item name="android:textColor">@color/md_theme_light_secondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetPhone">
        <item name="android:padding">16dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_bordered_phone_bg</item>
    </style>

    <style name="BottomSheetLink">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/md_theme_light_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="BottomSheetContent">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DialogHeader">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/md_theme_light_onSecondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/md_theme_light_secondaryContainer</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="CardContent">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- TOOLBAR THEME -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Color of the title text in the Toolbar -->
        <item name="android:textColorPrimary">@color/md_theme_light_onSecondary</item>
    </style>

    <style name="MenuPopupTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/md_theme_light_secondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TOOLBAR TITLE THEME -->
    <style name="TitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/md_theme_light_onSecondary</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/md_theme_light_secondary</item>
        <item name="android:padding">0dp</item>
        <item name="itemIconTint">@color/bottom_navigation_colors</item>
        <item name="itemTextColor">@color/bottom_navigation_colors</item>
        <item name="itemActiveIndicatorStyle">@color/transparent</item>
        <item name="itemRippleColor">@color/md_theme_light_secondaryContainer</item>
    </style>

    <style name="circleImageView">
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="cuttedImageView">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">20dp</item>
    </style>

</resources>