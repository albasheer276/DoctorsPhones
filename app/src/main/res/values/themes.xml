<resources>

    <style name="Theme.DoctorsPhones" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_primaryInverse</item>
        <item name="fontFamily">@font/cairo_font</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTitle">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="NormalInput" parent="android:Widget.EditText">
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="android:padding">12dp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/rounded_bordered_bg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="ShapeAppearanceOverlay.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Button.Rounded</item>
        <item name="backgroundTint">@color/md_theme_light_secondaryContainer</item>
        <item name="colorControlHighlight">@color/md_theme_light_secondary</item>
        <item name="android:textColor">@color/md_theme_light_onSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SmallSecondaryButton" parent="">
        <item name="android:background">@drawable/secondary_rounded_bordered_bg</item>
        <item name="colorControlHighlight">@color/secondaryButtonColorHighlight</item>
        <item name="android:textColor">@color/secondaryButtonTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="fontFamily">@font/arabic_typesettings_font</item>
    </style>

    <style name="CardHeader">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/arabic_typesettings_font</item>
        <item name="android:background">@color/md_theme_light_primaryContainer</item>
    </style>

    <style name="BottomSheetHeader">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/arabic_typesettings_font</item>
        <item name="android:background">@color/md_theme_light_primaryContainer</item>
    </style>

    <style name="BottomSheetH1">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="BottomSheetPhone">
        <item name="android:padding">16dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/rounded_bordered_phone_bg</item>
    </style>

    <style name="BottomSheetLink">
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/md_theme_light_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="BottomSheetContent">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="DialogHeader">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/md_theme_light_onSecondary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/md_theme_light_secondaryContainer</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="CardContent">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/md_theme_light_onPrimaryContainer</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>